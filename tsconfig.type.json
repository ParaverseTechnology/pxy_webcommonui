{
    "compilerOptions": {
      "emitDeclarationOnly": true,
      "declaration": true,
      // "declarationDir": "./dist/typings",
      "outFile": "dist/pxy_webcommonui.min.d.ts",
      "outDir": "./dist/typings",
      "baseUrl": "./src",
